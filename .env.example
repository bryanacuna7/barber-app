# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Email Configuration (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=BarberShop Pro <noreply@yourdomain.com>

# Notification API Secret (for internal API calls)
# Generate a random secret: openssl rand -base64 32
NOTIFICATION_API_SECRET=your_random_secret_key_here

# Cron Secret (for Vercel Cron Jobs)
# Used to authenticate cron job requests
CRON_SECRET=your_cron_secret_here

# Optional: Analytics & Monitoring
NEXT_PUBLIC_APP_URL=https://app.barbershoppro.com

# Sentry Error Tracking (Optional)
# Get your DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id
SENTRY_ORG=your_sentry_organization
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Upstash Redis for Rate Limiting (Optional)
# Get credentials from: https://console.upstash.com/
# If not set, will use in-memory rate limiting
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Logging Configuration (Optional)
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Feature Flags - UI/UX Redesign
# Set to 'true' to enable new UI, 'false' to use old UI (instant rollback < 5 min)

# Module 1: Mi Día (Dashboard Intelligence)
NEXT_PUBLIC_FF_NEW_MI_DIA=false

# Module 2: Servicios (Simplified Hybrid + Sidebar)
NEXT_PUBLIC_FF_NEW_SERVICIOS=false

# Module 3: Clientes (Dashboard + Canvas + Depth Fusion)
NEXT_PUBLIC_FF_NEW_CLIENTES=false

# Module 4: Reportes (Intelligence Report)
NEXT_PUBLIC_FF_NEW_REPORTES=false

# Module 5: Configuración (Bento Grid Luxury)
NEXT_PUBLIC_FF_NEW_CONFIGURACION=false

# Module 6: Barberos (Visual CRM Canvas)
NEXT_PUBLIC_FF_NEW_BARBEROS=false

# Module 7: Citas (Calendar Cinema + macOS)
NEXT_PUBLIC_FF_NEW_CITAS=false

# Global design system (unified mesh gradients + colors)
NEXT_PUBLIC_FF_UNIFIED_DESIGN=false
